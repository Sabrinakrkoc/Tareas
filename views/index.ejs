<%- include('partials/_header.ejs') %>
<div class="container">
        <div class="row">
            <div class="col-md-8 offset-2 mb-20">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" class="form-control"></textarea>
                            </div>
                            <button class="btn btn-primary" type="submit">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-12 offset-2 p-5">
                <table>
                    <tr>
                        <th>Nro.</th>
                        <th>Titulo</th>
                        <th>descripcion</th>
                        <th>Operaciones</th>
                    </tr>
                    <% for(let i=0; i<tasks.length; i++){ %>
                    <tr>
                        <td><%= i + 1%></td>
                        <td><%= tasks[i].title %></td>
                        <td><%= tasks[i].description %></td>
                        <td>
                            <a href="/turn/<%= tasks[i]._id %>" class="<%= tasks [i].status ? 'btn btn-success' : 'btn btn-dark'%>">Listo</a>
                            <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                            <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Borrar</a>
                            
                        </td>





                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>        
<%- include('partials/_footer.ejs') %>
